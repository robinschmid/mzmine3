<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>


<BorderPane  xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.mzmine.users.fx.UserPaneController">
   <left>
    <BorderPane>
<center>
            <ListView prefWidth="450" fx:id="listViewLicenses" />
</center>
</BorderPane>
   </left>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <bottom>
            <FlowPane alignment="TOP_CENTER" hgap="4.0" vgap="4.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onRemoveUser" text="Remove user" />
                  <Button mnemonicParsing="false" onAction="#onSignIn" text="Sign in / Register" />
                  <Button mnemonicParsing="false" onAction="#loadExternalUserFiles" text="Load user files" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </FlowPane>
         </bottom>
         <center>
            <TextArea fx:id="textLicense" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
</BorderPane>
